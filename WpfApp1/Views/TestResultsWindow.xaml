<Window x:Class="WpfApp1.Views.TestResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты тестирования" Height="400" Width="600">
    <Grid Margin="10">
        <TextBlock FontSize="20" FontWeight="Bold" Text="Результаты тестирования" HorizontalAlignment="Center" Margin="0,10"/>

        <ListView ItemsSource="{Binding TestResults}" Margin="10,50,10,50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID Теста" DisplayMemberBinding="{Binding TestId}" Width="80"/>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding TestDate}" Width="120"/>
                    <GridViewColumn Header="ID Вопроса" DisplayMemberBinding="{Binding QuestionId}" Width="80"/>
                    <GridViewColumn Header="Ответ" DisplayMemberBinding="{Binding Answer}" Width="100"/>
                    <GridViewColumn Header="Правильных ответов" DisplayMemberBinding="{Binding CorrectAnswers}" Width="120"/>
                    <GridViewColumn Header="Оценка" DisplayMemberBinding="{Binding Grade}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Закрыть" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Command="{Binding CloseCommand}" Margin="10"/>
    </Grid>
</Window>
