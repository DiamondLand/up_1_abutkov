<Window x:Class="WpfApp1.Views.TestResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты тестирования" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Результаты теста" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding TestResults[0].StudentName}" FontSize="14"/>
            <TextBlock Text="{Binding TestResults[0].StudentId}" FontSize="14"/>
            <TextBlock Text="{Binding TestResults[0].TestDate, StringFormat='Дата теста: {0:dd.MM.yyyy HH:mm}'}" FontSize="14"/>
            <TextBlock Text="{Binding TestResults[0].TotalQuestions, StringFormat='Всего вопросов: {0}'}" FontSize="14"/>
            <TextBlock Text="{Binding TestResults[0].CorrectAnswers, StringFormat='Правильных ответов: {0}'}" FontSize="14"/>
            <TextBlock Text="{Binding TestResults[0].Grade, StringFormat='Оценка: {0}'}" FontSize="14"/>
            <TextBlock Text="{Binding TestResults[0].DurationMinutes, StringFormat='Длительность: {0} минут'}" FontSize="14"/>
            <Button Content="Закрыть" Command="{Binding CloseCommand}" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
